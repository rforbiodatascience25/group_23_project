.table-small {
  transform: scale(0.75);         /* adjust the size */
  transform-origin: top left;     /* keep it aligned at top */
  width: 100% !important;
}

.table-small table {
  width: 100% !important;         /* ensure table doesn't stretch */
  font-size: 0.8em;               /* additional font scaling */
}

.table-small {
  margin-top: 1em;
}
